        "Alex Barnsley <alex@ark.io>"
    ],
    "license": "MIT",
    "main": "dist/index",
    "types": "dist/index",
    "files": [
        "dist"
    ],
    "scripts": {
        "prepublishOnly": "yarn test && yarn build",
        "pretest": "bash ../../scripts/pre-test.sh",
