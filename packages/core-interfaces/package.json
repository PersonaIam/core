        "@types/istanbul-lib-coverage": "^2.0.1",
        "@types/stack-utils": "^1.0.1",
        "@types/yargs": "^13.0.0",
        "awilix": "^4.0.1",
        "eventemitter3": "^3.1.0"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=10.x"
